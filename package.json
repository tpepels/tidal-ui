{
	"name": "tidal-ui",
	"private": true,
	"version": "3.0.0",
	"license": "MPL-2.0",
	"type": "module",
	"scripts": {
		"dev": "vite dev --config config/build/vite.config.ts",
		"build": "vite build --config config/build/vite.config.ts",
		"preview": "vite preview --config config/build/vite.config.ts",
		"check": "svelte-kit sync && svelte-check --tsconfig ./config/build/tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./config/build/tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "eslint . --config config/lint/eslint.config.js",
		"test": "NODE_OPTIONS=--localstorage-file=./.node-localstorage vitest --config config/test/vitest.config.ts",
		"test:ui": "NODE_OPTIONS=--localstorage-file=./.node-localstorage vitest --ui --config config/test/vitest.config.ts",
		"test:run": "NODE_OPTIONS=--localstorage-file=./.node-localstorage vitest run --config config/test/vitest.config.ts",
		"test:coverage": "NODE_OPTIONS=--localstorage-file=./.node-localstorage vitest run --coverage --config config/test/vitest.config.ts",
		"test:e2e": "playwright test --config config/test/playwright.config.ts",
		"test:e2e:ui": "playwright test --ui --config config/test/playwright.config.ts",
		"test:e2e:stabilization": "playwright test --config config/test/playwright.config.ts tests/e2e/stabilization-*.spec.ts"
	},
	"devDependencies": {
		"@eslint/compat": "^1.2.5",
		"@eslint/js": "^9.22.0",
		"@playwright/test": "^1.57.0",
		"@sveltejs/adapter-auto": "^6.0.0",
		"@sveltejs/adapter-node": "^5.3.3",
		"@sveltejs/adapter-vercel": "^5.10.3",
		"@sveltejs/kit": "^2.49.2",
		"@sveltejs/vite-plugin-svelte": "^6.0.0",
		"@tailwindcss/forms": "^0.5.9",
		"@tailwindcss/typography": "^0.5.15",
		"@tailwindcss/vite": "^4.0.0",
		"@testing-library/jest-dom": "^6.1.4",
		"@testing-library/svelte": "^4.0.3",
		"@testing-library/user-event": "^14.5.1",
		"@types/node": "^20",
		"@vitest/coverage-v8": "^1.6.1",
		"eslint": "^9.22.0",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-svelte": "^3.0.0",
		"globals": "^16.0.0",
		"jsdom": "^23.0.1",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"svelte": "^5.46.0",
		"svelte-check": "^4.0.0",
		"tailwindcss": "^4.0.0",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.20.0",
		"vite": "^7.0.4",
		"vite-plugin-devtools-json": "^1.0.0",
		"vitest": "^1.0.4"
	},
	"dependencies": {
		"@ffmpeg/ffmpeg": "^0.12.6",
		"@ffmpeg/util": "^0.12.1",
		"ffmetadata": "^1.7.0",
		"ioredis": "^5.4.1",
		"jszip": "^3.10.1",
		"lucide-svelte": "^0.544.0",
		"music-metadata": "^11.10.3",
		"shaka-player": "^4.11.7",
		"zod": "^4.2.1"
	}
}
